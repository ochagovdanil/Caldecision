<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily" tools:ignore="NewApi">@font/titillium_web_light</item>
        <item name="buttonNumberBackground">#434343</item>
        <item name="buttonNumberTouchedBackground">#353434</item>
        <item name="buttonOptionBackground">#636363</item>
        <item name="buttonOptionTouchedBackground">#585757</item>
        <item name="basicButtonTextColor">#fff</item>
        <item name="android:windowAnimationStyle">@style/WindowThemeTransition</item>
    </style>

    <style name="WindowThemeTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="GreenTheme" parent="AppTheme">
        <item name="colorPrimaryDark">#00bcd4</item>
        <item name="primaryDarkColor">#00bcd4</item>
        <item name="colorAccent">#18c298</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">#000</item>
        <item name="mainBackground">#1DE9B6</item>
        <item name="mainTouchedBackground">#18c298</item>
        <item name="additionButtonTextColor">#0C604B</item>
    </style>

    <style name="OrangeTheme" parent="AppTheme">
        <item name="colorPrimaryDark">#DA6D1B</item>
        <item name="primaryDarkColor">#DA6D1B</item>
        <item name="colorAccent">#DA6D1B</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">#000</item>
        <item name="mainBackground">#F88903</item>
        <item name="mainTouchedBackground">#E77F02</item>
        <item name="additionButtonTextColor">#4E2A05</item>
    </style>

    <style name="BlueTheme" parent="AppTheme">
        <item name="colorPrimaryDark">#157AF3</item>
        <item name="primaryDarkColor">#157AF3</item>
        <item name="colorAccent">#157AF3</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">#000</item>
        <item name="mainBackground">#247EEE</item>
        <item name="mainTouchedBackground">#166DDA</item>
        <item name="additionButtonTextColor">#114B91</item>
    </style>

    <!-- splash theme -->
    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">@color/colorPrimaryDark</item>
    </style>

    <!-- styles of components -->
    <style name="ButtonsNumberDark">
        <item name="android:background">@drawable/btn_dark</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ButtonsNumberLight">
        <item name="android:stateListAnimator" tools:ignore="NewApi">@null</item>
        <item name="android:background">@drawable/btn_light</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="ButtonsNumberGreen">
        <item name="android:stateListAnimator" tools:ignore="NewApi">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/btn_green</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">25sp</item>
    </style>

</resources>
